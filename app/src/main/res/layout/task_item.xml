<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/task_name"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/complete"
        android:layout_toStartOf="@+id/complete"
        android:text="@string/task_name"/>

    <TextView
        android:id="@+id/task_description"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_name"
        android:layout_marginLeft="@dimen/task_description_vertical_margin"
        android:layout_marginRight="@dimen/task_description_vertical_margin"
        android:layout_toLeftOf="@+id/complete"
        android:layout_toStartOf="@+id/complete"
        android:text="@string/task_description"/>

    <TextView
        android:id="@+id/task_start_time"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/task_description"
        android:layout_marginLeft="@dimen/task_time_vertical_margin"
        android:layout_marginRight="@dimen/task_time_vertical_margin"
        android:text="@string/task_start_time"/>

    <TextView
        android:id="@+id/task_end_time"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_description"
        android:layout_marginLeft="@dimen/task_time_vertical_margin"
        android:layout_marginRight="@dimen/task_time_vertical_margin"
        android:layout_toEndOf="@+id/task_start_time"
        android:layout_toLeftOf="@+id/complete"
        android:layout_toRightOf="@+id/task_start_time"
        android:layout_toStartOf="@+id/complete"
        android:text="@string/task_end_time"/>

    <CheckBox
        android:id="@+id/complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>